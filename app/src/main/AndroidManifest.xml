<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.story.creator.picker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.CPApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.HomeActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.CustomPaletteActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.HarmonicPaletteActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.ImagePaletteActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.MyPaletteActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.PaletteDetailActiivty"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.FavouritesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SettingsActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>